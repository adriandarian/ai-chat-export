{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "docs", "release": false },
          { "type": "style", "release": false },
          { "type": "test", "release": false },
          { "type": "build", "release": "patch" },
          { "type": "ci", "release": false },
          { "type": "chore", "release": false },
          { "breaking": true, "release": "major" }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "üöÄ Features", "hidden": false },
            { "type": "fix", "section": "üêõ Bug Fixes", "hidden": false },
            { "type": "perf", "section": "‚ö° Performance Improvements", "hidden": false },
            { "type": "refactor", "section": "‚ôªÔ∏è Code Refactoring", "hidden": false },
            { "type": "docs", "section": "üìö Documentation", "hidden": false },
            { "type": "style", "section": "üíÑ Styles", "hidden": true },
            { "type": "test", "section": "‚úÖ Tests", "hidden": true },
            { "type": "build", "section": "üì¶ Build System", "hidden": false },
            { "type": "ci", "section": "üë∑ CI/CD", "hidden": true },
            { "type": "chore", "section": "üîß Chores", "hidden": true },
            { "type": "revert", "section": "‚è™ Reverts", "hidden": false }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to the AI Chat Export browser extension will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html)."
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "package-lock.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [],
        "successComment": false,
        "failComment": false,
        "releasedLabels": ["released"]
      }
    ]
  ]
}
